{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "jsx":"preserve",
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "dist",
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
